<body>
  <section>
    <div class="login-box">
      <form action="/signup" method="POST">
        <h2>Bienvenido de vuelta</h2>
        <div class="register-link">
          <p>Si ya tiene un cuenta de click aqui<a href="/signin">
              Inicias Sesion</a></p>
        </div>
        <h2>Crear Cuenta</h2>
        <div class="input-box">
          <span class="icon"></span>
          <input type="type" name="name" placeholder="Nombre" class="form-control" required autofocus>
          <label>Nombre</label>
        </div>
        <div class="input-box">
          <span class="icon"></span>
          <input type="type" name="lastName" placeholder="Apellido" class="form-control" required autofocus>
          <label>Apellido</label>
        </div>
        <div class="input-box">
          <span class="icon"></span>
          <input type="text" name="email" placeholder="Email" class="form-control" required>
          <label>Email</label>
        </div>
        <div class="input-box">
          <span class="icon"></span>
          <input type="password" name="password" placeholder="Password" class="form-control">
          <label>Password</label>
        </div>
        <button type="submit">Iniciar Sesion</button>
      </form>
    </div>
  </section>
</body>