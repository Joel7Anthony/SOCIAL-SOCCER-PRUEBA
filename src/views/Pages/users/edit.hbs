{{#if user}}

<div class="col-md-12" style="margin-bottom: 5px; ">
        <div class="card text-center border border-primary">
            <h3 class="card-title text-uppercase" style="color: #275925;">
                Edita tu perfil
            </h3>
        </div>
    </div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card border border-primary">
                <div class="card-body">
                    <form action="/users/edit-users/{{user.id}}" method="POST">
                        <h1 style="color: #275925;">Editar</h1>
                        <div class="form-group">
                            <input type="text" value="{{user.name}}" name="name" class="form-control"
                                placeholder="Nombre" required autofocus>
                        </div> <br>
                        <div class="form-group">
                            <input type="text" value="{{user.email}}" name="email" class="form-control"
                                placeholder="Email" required>
                        </div><br>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" required
                                placeholder="Description">{{user.description}}</textarea>
                        </div><br>
                        <div class="form-group">
                            <input type="text" value="{{user.lastName}}" name="lastName" class="form-control"
                                placeholder="Segundo Nombre" required>
                        </div><br>
                        <div class="form-group">
                            <input type="text" value="{{user.dni}}" name="dni" class="form-control"
                                placeholder="Cedula" required>
                        </div><br>
                        <div class="form-group">
                            <input type="number" value="{{user.phone}}" name="phone" class="form-control"
                                placeholder="Celular" required>
                        </div><br>
                        <div class="form-group">
                            <input type="text" value="{{user.profession}}" name="profession" class="form-control"
                                placeholder="Rolr" required>
                        </div><br>
                        

                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
{{else}}
<h1>logueate papu</h1>
{{/if}}