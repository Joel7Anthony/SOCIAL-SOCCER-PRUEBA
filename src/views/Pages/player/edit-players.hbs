<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">
        <h3 class="card-title text-uppercase" style="color: rgba(255, 255, 255, 0.863);">
            Editar
        </h3>
    </div>
</div>
<link rel="stylesheet" href="/css/players.css">
<div class="card-body">
    <form action="/players/edit-players/{{player.idplayers}}" method="POST">
        <div id="logo"></div>
        <h1><div id="sub-title">Editar Jugador</div></h1>

        <option value= "selecionar equipo XD">Seleciona a tu equipo</option>
        <select id="country" name="country" class="btn btn-secondary col-12" required>
         <option value="selecionar equipo XD">Seleciona a tu equipo </option>
        {{#each teams}}
                <option value="{{idteams}}">{{name_team}}</option>
        {{/each}}        
      </select>
        <div id="input">
            <div id="inputBox">
                <label>Nombre del Jugador</label>
                <input type="text" value="{{player.playername}}" name="playername" class="form-control"
                    placeholder="Nombre del jugador" />
            </div>

            <div id="inputBox">
                <label>Edad del jugador</label>
                <input type="text" value="{{player.age}}" class="form-control" name="age" placeholder="Edad del jugador"
                    autofocus />
            </div>
            <div id="inputBox">
                <label>Fecha de Nacimiento</label>
                <input type="text" value="{{player.birthdate}}" name="birthdate" class="form-control"
                    placeholder="Fecha de Nacimiento" />
            </div>
            <div id="inputBox">
                <label>Numero de Camiseta</label>
                <input type="text" value="{{player.tshirtnumber}}" name="tshirtnumber" class="form-control"
                    placeholder="Numero de Camiseta" />
            </div>

            <div id="inputBox">
                <label>Numero de Camiseta</label>
                <input type="text" value="{{player.position}}" name="position" class="form-control"
                    placeholder="Numero de Camiseta" />
            </div>

            <div id="inputBox">
                <center><input type="submit" value="Guardar" /></center><center>
            </div>
        </div>
    </form>
</div>