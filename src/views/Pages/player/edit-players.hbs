<div class="Boxtitle"></div>
<div class="lineleft"></div>
<div class="lineright"></div>
<div class="Titulo">Editar Jugadores</div>

<link rel="stylesheet" href="/css/players.css">
<div class="card-body">
    <form action="/players/edit-players/{{player.idplayers}}" method="POST">
        <div id="logo"></div>

        <div class= "label1">Seleciona a tu equipo</div>
        <select id="country" name="country" class="menubox" required>
         <option value="selecionar equipo XD">Seleciona a tu equipo </option>
        {{#each teams}}
                <option value="{{idteams}}">{{name_team}}</option>
        {{/each}}        
      </select>
      <div class= "label1">Nombre del Jugador</div>
                <input type="text" value="{{player.playername}}" name="playername" class="form-control"
                    placeholder="Nombre del jugador" />
       
       <Div class="label1">Edad del jugador</div>
       <input type="text" value="{{player.age}}" class="form-control" name="age" placeholder="Edad del jugador"
       autofocus />
                <div class="label1">Fecha de Nacimiento</div>
                <input type="date" value="{{player.birthdate}}" name="birthdate" class="form-control"
                    placeholder="Fecha de Nacimiento" />
                <div class="label1">Numero de Camiseta</div>
                <input type="text" value="{{player.tshirtnumber}}" name="tshirtnumber" class="form-control"
                    placeholder="Numero de Camiseta" />
                <div class="label1">Posici√≥n de Juego</div>
                     <select type="option" value="{{player.position}}" class="menubox" name="position">
                      <option value="Aquero"> Arquero </option>
                      <option value="Defensa"> Defensa </option>
                      <option value="Mediocampista"> Mediocampista </option>
                      <option value="Delantero"> Delantero </option>
                     </select>
            <div id="inputBox">
                <center><input type="submit" value="Guardar" /></center>
            </div>
        </div>
    </form>
</div>