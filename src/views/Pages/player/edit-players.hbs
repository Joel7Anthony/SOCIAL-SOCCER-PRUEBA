<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">
        <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
            Editar jugador
        </h3>
    </div>
</div>
<link rel="stylesheet" href="/css/players.css">
<div class="card-body">
    <form action="/players/edit-players/{{player.id}}" method="POST">
        <div id="logo"></div>
        <div id="title">Crear</div>
        <div id="sub-title">Editar Jugador</div>
        <div id="input">
            <div id="inputBox">
                <label>Nombre del Jugador</label>
                <input type="text" value="{{player.playername}}" name="playername" class="form-control"
                    placeholder="Nombre del jugador" />
            </div>

            <div id="inputBox">
                <label>Edad del jugador</label>
                <input type="text" value="{{player.age}}" class="form-control" name="age" placeholder="Edad del jugador"
                    autofocus />
            </div>
            <div id="inputBox">
                <label>Fecha de Nacimiento</label>
                <input type="text" value="{{player.birthdate}}" name="birthdate" class="form-control"
                    placeholder="Fecha de Nacimiento" />
            </div>
            <div id="inputBox">
                <label>Numero de Camiseta</label>
                <input type="text" value="{{player.tshirtnumber}}" name="tshirtnumber" class="form-control"
                    placeholder="Numero de Camiseta" />
            </div>

            <div id="inputBox">
                <input type="submit" value="Guardar" />
            </div>
        </div>
    </form>
</div>