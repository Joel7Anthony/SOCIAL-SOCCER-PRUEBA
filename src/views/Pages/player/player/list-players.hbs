<link rel="stylesheet" href="/css/players.css">
    <div class="card text-center border border-primary">
     <div id="title"><h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
            Lista de Jugadores
        </h3></div>
    </div>
</div> 
<div class="card-body">
{{#each players}}
<div class="card-body">
    {{#if photo}}
    <img class="card__image" src="/{{photo}}" loading="lazy" alt="User Profile">
    {{else}}
    <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
    {{/if}}
    <div id="datos">
    <div id="data-one"><p>Nombre Jugador:   {{playername}}</p></div>
    <div id="data-two"><p>Edad:   {{age}}</p></div>
    <div id="data-three"><p>Fecha de Nacimiento:    {{birthdate}}</p></div>
    <div id="data-four"><p>Numero de Camiseta:  {{tshirtnumber}}</p></div>
    </div>
    <center>
        <a href="/palyers/delete-players/{{id}}" class="danger">Eliminar</a>
        <a href="/players/edit-players/{{id}}" class="secondary">Editar</a> 
        <form action="/players/photo-player/{{id}}" method="POST" encType="multipart/form-data">
            <input type="file" id="input" name="sampleFile" accept="image/*" />
            <input type="submit" id="button-edit">
        </form>
    </center>
</div>
{{else}}
<center> <p>No hay registro guardados a un </p>
    <a href="/players/add" id="add"> Agrega uno haciendo click aqui</a>
</center>
{{/each}}