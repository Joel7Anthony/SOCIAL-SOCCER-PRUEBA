<link rel="stylesheet" href="/css/teams.css" />
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
/>
<script src="/js/buscador/buscador.js"></script>
<div id="cliente-listar-container">

  <div id="cliente-listar-contenedor">

    <p
      id="titulo-gestion"
      class="titulo-gestion"
      style="padding-top: 20px;  margin: 0 auto; text-align:center; font-size: 25px;"
    >Gestión de Equipos</p>

    <button id="button-agregar" class="button-agregar">
      <a href="/teams/add/" style="color:white; text-decoration: none; ">
        Agregar</a>
    </button>

    <br />
    <div class="buscador">
      <label for="buscar">Buscar:</label>
      <input type="text" id="buscar" placeholder="Buscador" />

    </div>
    <br />
    <div class="div-table">
      <table class="table-gestion-clientes" id="table-gestion-clientes">
        <thead class="thead-titulos" id="thead-titulos">
          <tr class="fila-titulos" id="fila-titulos">
            <th
              class="th-titulos-esquina-izquierda"
              id="th-titulos-esquina-izquierda"
            >
              <p>Nombre Director</p>
            </th>
            <th class="th-titulos" id="th-titulos">
              <p>Nobre del Equipo</p>
            </th>
            <th class="th-titulos" id="th-titulos">
              <p>Color</p>
            </th>
            <th class="th-titulos" id="th-titulos">
              <p>Fecha Creacion</p>
            </th>
            <th class="th-titulos" id="th-titulos">
              <p>Rol</p>
            </th>
             <th class="th-titulos" id="th-titulos">
              <p>Categoria</p>
            </th>
            <th class="th-titulos" id="th-titulos">
              <p>editar</p>
            </th>
            <th 
              class="th-titulos-esquina-derecha"
              id="th-titulos-esquina-derecha"
              colspan="2"
            >
              <p>Acción</p>
            </th>
          </tr>
        </thead>
        {{#each teams}}
          <tbody>
            <tr class="fila-campos" id="fila-campos">
              <td class="td-campos" id="td-campos">
                <p>{{name_president}}</p>
              </td>
              <td class="td-campos" id="td-campos">
                <p>{{name_team}}</p>
              </td>
              <td class="td-campos" id="td-campos">
                <p>{{color}}</p>
              </td>
              <td class="td-campos" id="td-campos">
                <p>{{creationdate}}</p>
              </td>
              <td class="td-campos" id="td-campos">
                <p>{{rol}}</p>
              </td>
              <td class="td-campos" id="td-campos">
                <p>{{categori}}</p>
              </td>
              <td class="td-campos" id="td-campos">
                <div>
                  <a href="/teams/edit-teams/{{id}}">
                    <button type="editar">
                      <i class="fas fa-pencil-alt"></i>
                    </button>
                  </a>
                </div>

              </td>

              <td class="td-campos" id="td-campos">
                <div>
                  <a href="/teams/delete-teams/{{id}}">
                    <button type="eliminar">
                      <i class="fas fa-trash-alt"></i>
                    </button>
                  </a>
                </div>

              </td>
            </tr>
          </tbody>
        {{/each}}
      </table>

    </div>
    <div>

    </div>
  </div>
</div>