 <link rel="stylesheet" href="/css/teams.css">
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
 <script src="/js/buscador/buscador.js"></script>
 <div class="buscador">
            <label for="buscar">Buscar:</label>
            <input type="text" id="buscar" placeholder="Buscador" >

        </div>
{{#each teams}}
<form action="/teams/photo-team/{{id}}" method="POST" encType="multipart/form-data">
<div class="card-body" id="lcb">
    <p>{{name}}</p>
     {{#if photo}}
    <img class="card__image" src="/{{photo}}" loading="lazy" alt="User Profile">
    {{else}}
    <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
    {{/if}}
     <center>
    <p>{{name_president}}</p>
    <p>{{name_team}}</p>
    <p>{{color}}</p>
    <p>{{creationdate}}</p>
    <p>{{rol}}</p>
    <p>{{categori}}</p>

        <input type="file" name="sampleFile" accept="image/*" id="foto"/> <br> <br>
        <a href="/teams/delete-teams/{{id}}" class="danger">Eliminar</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="/teams/edit-teams/{{id}}" class="secondary">Editar</a> <br> <br>
        <input type="submit" id="env">
        
    </center>
</div>
</form>
{{else}}
<center> <p>No hay registro guardados a un </p>
    <a href="/teams/add"> Agrega uno haciendo click aqui</a>
</center>
{{/each}}