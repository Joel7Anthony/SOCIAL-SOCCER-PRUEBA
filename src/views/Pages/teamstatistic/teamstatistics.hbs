<link rel="stylesheet" href="/css/teamstatistics.css">
<form action="/teamstatistics/teamstatistics" method="POST">
<h1>Estadisticas de Equipo</h1>
<div id="container">

    <h2>Resultados </h2>

    <option value="selecionar equipo XD">Seleciona a tu equipo</option>
        <select id="country" name="country" class="btn btn-secondary col-12" required>
         <option value="selecionar equipo XD">Seleciona a tu equipo </option>
        {{#each teams}}
                <option value="{{name_team}}">{{name_team}}</option>
        {{/each}}        
        </select>
    <div class="form-group">
        <label for="equipo">Posición de la liga:</label> <br>
        <input type="number" name="league_position" class="form-control" placeholder="Posición de la liga" autofocus />
    </div>
    <div class="form-group">
        <label for="posicion">Goles </label><br>
        <input type="number" name="goles" class="form-control" placeholder="Goles" autofocus />
    </div>
   <div class="form-group">
    <label for="foundation_date">Fecha de fundación:</label><br>
    <input type="date" id="foundation_date" name="foundation_date" class="form-control" autofocus />
</div>

   
    <div class="form-group">
        <label for="totales-gc">Número de jugadores</label><br>
        <input type="number" name="number_players" class="form-control" placeholder="Número de jugadores:" autofocus />
    </div>
    
    <div id="inputBox">
        <input type="submit" value="Guardar" id="button1"/>
    </div>
    <div >
            <input type="submit" value="Cancelar" id="cancelButton"/>
    </div>
</div>
</form>