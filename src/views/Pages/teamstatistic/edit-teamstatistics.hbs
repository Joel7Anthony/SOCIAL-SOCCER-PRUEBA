<link rel="stylesheet" href="/css/teamstatistics.css">
<form action="/teamstatistics/edit-teamstatistics/{{teamstatistic.id}}" method="POST">
    <div id="container-edit">
    <h2>Editar estadisticas</h2>
    <div class="form-group">
        <label for="equipo">Posición de la liga:</label>
        <input type="number" value="{{teamstatistic.league_position}}" name="league_position" class="form-control"
                    placeholder="Posición" />
    </div>
    <div class="form-group">
        <label for="posicion">Goles:</label>
        <input type="number" value="{{teamstatistic.goles}}" name="goles" class="form-control"
                    placeholder="Goles" />
    </div>
    <div class="form-group">
        <label for="pts">Fecha de fundación:</label>
        <input type="date" value="{{teamstatistic.foundation_date}}" name="foundation_date" class="form-control"
                    placeholder="Fecha de fundación" />

    <div class="form-group">
        <label for="totales-gc">Número de jugadores:</label>
        <input type="number" value="{{teamstatistic.number_players}}" name="number_players" class="form-control"
                    placeholder="Número de jugadoresr" />
    </div>
    
    <div id="inputBox">
        <input type="submit" value="Guardar" id="button2"/>
    </div>

    <div >
            <input type="submit" value="Cancelar" id="cancelButton"/>
    </div>
</div>
</form>