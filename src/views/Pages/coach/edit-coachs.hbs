<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">
        <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
            Editar Entrenador
        </h3>
    </div>
</div>
<link rel="stylesheet" href="/css/teams.css">
<div class="card-body">
    <form action="/coachs/edit-coachs/{{coach.idcoachs}}" method="POST">
        <div id="logo"></div>
        <div id="title"></div>
        <div id="sub-title"></div>
        <div id="input">
            <div id="inputBox">
                <label>NOMBRE ENTRENADOR</label>
                <input type="text" value="{{coach.name_coach}}" name="name_coach" class="form-control"
                    placeholder="Nombre Entrenador" />
            </div>
            <div id="inputBox">
                <label>CORREO ETRENADOR</label>
                <input type="text" value="{{coach.coach_mail}}" name="coach_mail" class="form-control"
                    placeholder="Correo Entrenador" />
            </div>
            <div id="inputBox">
                <label>TELEFONO</label>
                <input type="text" value="{{coach.phonecoach}}" class="form-control" name="phone"
                    placeholder="Telefono" autofocus />
            </div>
          
            
           
            <br>
            
            <div id="inputBox">
              <center><input type="submit" value="Guardar" /></center>
            </div>
        </div>
    </form>
</div>
</div>
</div>
</div>